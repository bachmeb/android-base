<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="us.proximal.spellwithme.view.Test">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Test Page"
        android:id="@+id/textWord"
        android:layout_marginTop="16dp"

        android:layout_centerHorizontal="true"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prime Words"
        android:id="@+id/buttonPrimeWords"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/textWord"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Database"
        android:id="@+id/buttonMakeDatabase"


        android:layout_marginTop="80dp"
        android:layout_below="@+id/textWord"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast Word"
        android:id="@+id/buttonToastWord"

        android:layout_marginTop="140dp"
        android:layout_below="@+id/textWord"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Table"
        android:id="@+id/buttonDeleteTable"

        android:layout_marginTop="200dp"
        android:layout_below="@+id/textWord"
        android:layout_centerHorizontal="true"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/buttonQueryGoogle"

        android:layout_marginTop="260dp"
        android:layout_below="@+id/textWord"
        android:layout_centerHorizontal="true"

        />


</RelativeLayout>
